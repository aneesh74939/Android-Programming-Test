<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4E4EE1</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="statusBarBackground">@color/colorWhite</item>


    </style>


    <style name="AcionBarTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#EFEEEE</item>
        <item name="colorPrimaryDark">#DFDEDE</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="CustomTextAppearanceTab" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>


    <style name="NoActionbarTheme" parent="Theme.AppCompat.Light.NoActionBar">

        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fff</item>
        <item name="colorPrimaryDark">@color/colorGrey</item>
        <item name="colorAccent">@color/colorLightOrange</item>
        <item name="android:windowNoTitle">true</item>


    </style>


    <style name="Base_ToolbarStyle">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:background">#fff</item>
        <item name="android:theme">@style/Base_ToolbarTheme</item>
        <item name="titleTextAppearance">@style/CustomTitleTextAppearance</item>
    </style>

    <style name="Base_ToolbarTheme">
        <!-- Color used for the title of the Toolbar - as long as not overridden -->
        <item name="android:textColorPrimary">@android:color/white</item>
        <!-- Used to color back button and three dots -->
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <style name="CustomTitleTextAppearance" parent="TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="search_tab_text_style">
        <item name="android:textSize">16sp</item>
        <item name="fontFamily">@font/sf_pro_semi_bold</item>
        <item name="android:textAllCaps">false</item>
    </style>



</resources>